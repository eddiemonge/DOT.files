[user]
	name = Eddie Monge
	email = eddie@eddiemonge.com
[github]
	user = username
	token = token
[alias]
	br = branch
	ci = commit
	co = checkout
	df = diff
	lg = log -p
	pp = !"echo 'Pull'; git pull; echo 'Push'; git push"
	rv = review
	sm = show-merges
	st = status
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[merge]
	log = true
[difftool "Kaleidoscope"]
	cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"
[rerere]
	enabled = 1
