[alias]
  br = branch
  ci = commit
  co = checkout
  df = diff
  pb = publish-branch
  st = status
  ms = merge --squash
  pr = pull --rebase
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[merge]
  log = true
[difftool "Kaleidoscope"]
  cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"
[rerere]
  enabled = 1
[url "git@github.com:"]
  insteadOf = "gh:"
  pushInsteadOf = "github:"
  pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
  insteadOf = "github:"
[core]
  editor = mvim -f --nomru -c \"au VimLeave * !open -a iTerm2\"
  excludesfile = ~/.gitignore_global
[user]
  name = Eddie Monge
  email = eddie@eddiemonge.com
  signingkey = 00CFD54E
[credential]
  helper = osxkeychain
[push]
  default = matching
