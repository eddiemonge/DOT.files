[ui]
verbose=True

[alias]
__mystatus = status
st = !hg __mystatus $($HG root) $HG_ARGS
st. = !hg __mystatus .
pullr = pull --rebase

[extensions]
rebase = 
hgext.extdiff =
mq = 
graphlog =
purge =

[extdiff]
cmd.interdiff = hg-interdiff
cmd.opendiff = opendiff-w

[merge-tools]
filemerge.executable = opendiff-w
filemerge.args = $local $other -ancestor $base -merge $output

