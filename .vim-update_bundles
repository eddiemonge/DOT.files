#!/usr/bin/env ruby

git_bundles = [ 
    # JSHint integration. 
    # Manually call with :JSHint
    # :JSHintReload reload all .jshintrc option files.
    # :JSHintToggle enable or disable jshint validation
    # Add options to ~/.jshintrc
    "https://github.com/sleistner/vim-jshint.git",


    # Adds syntax error checking, think the >> on the side showing errors
    "https://github.com/scrooloose/syntastic.git",
    # Adds a file browser to the sidebar
    "https://github.com/scrooloose/nerdtree.git",


    # My color scheme
    "https://github.com/eddiemonge/TigerStripe.git",


    # Change the surrounding elements
    # cs"' to change quotes inside
    # cs'<em> to change quote to a block
    # cst" change a block to quotes
    # ds" or dst to remove surrounding
    # ysiw' surround a word
    # yss" surround line
    # VS<p> adding surround with visual editor
    "https://github.com/tpope/vim-surround.git",
    # Be able to repeat the previous block of plugins
    "https://github.com/tpope/vim-repeat.git",
    # A plugin for HAML
    "https://github.com/tpope/vim-haml.git",
    # A wrapper for git
    # :Gedit/Gsplit/Gvsplit to edit the file and stage it on save
    # :Gdiff to view the changes
    # :Gstatus to see a list of changes. -|p to add/reset
    # :Gblame to see blames. enter to edit the commit or o to open in a split
    # :Gremove
    # :Gmove
    # :Gbrowse to see the file on github
    "https://github.com/tpope/vim-fugitive.git",
    # Rails related vim things. Too much docs for here. See 
    # https://github.com/tpope/vim-rails for instructions
    "https://github.com/tpope/vim-rails.git",
    # Bundle support in vim. Uses :Bundle
    "https://github.com/tpope/vim-bundler.git",
    # Smart function endings for ruby
    "https://github.com/tpope/vim-endwise.git",


    # Powerline status bar
    "https://github.com/Lokaltog/powerline.git",

    
    # Show the actual color in CSS for the colors
    "https://github.com/skammer/vim-css-color.git",


    # JavaScript highlighting and indentation
    "https://github.com/pangloss/vim-javascript.git",


    # Shows the number of matches in a search
    "https://github.com/henrik/vim-indexed-search.git",


    # Quickly open any file
    # See https://github.com/kien/ctrlp.vim for documentation
    "https://github.com/kien/ctrlp.vim.git",


    # Easily jump to location.
    # ,,w for words. ,,f{query} for searches
    "https://github.com/Lokaltog/vim-easymotion.git",


    # Zencoding plugin.
    # type in the string html:5 then press , ctl+y+,
    # Tutorial at https://raw.github.com/mattn/zencoding-vim/master/TUTORIAL
    "https://github.com/mattn/zencoding-vim.git",


    # Vim ruby
    "https://github.com/vim-ruby/vim-ruby.git",


    # ACK for searching
    # :Ack [options] {pattern} [{directory}]
		# go   to preview file (open but maintain focus on ack.vim results)
		# t    to open in new tab
		# T    to open in new tab silently
		# h    to open in horizontal split
		# H    to open in horizontal split silently
		# v    to open in vertical split
		# gv   to open in vertical split silently
		# q    to close the quickfix window
    "https://github.com/mileszs/ack.vim.git",


    # Toggle comments on lines
    # gc(motion) Toggle comments
    "https://github.com/tpope/vim-commentary.git",
]

require 'fileutils'
require 'open-uri'

bundles_dir = File.join( File.join(File.expand_path('~'), ".vim"), "bundle")

FileUtils.cd(bundles_dir)

puts "Trashing everything in #{bundles_dir} (lookout!)"

Dir["*"].each {|d| FileUtils.rm_rf d }

git_bundles.each do |url|
  puts "  Unpacking #{url} "
  `git clone #{url}`
end

