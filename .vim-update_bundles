#!/usr/bin/env ruby

git_bundles = [ 
  "git://github.com/joestelmach/javaScriptLint.vim.git",
  "git://github.com/msanders/snipmate.vim.git",
  "git://github.com/scrooloose/nerdtree.git",
  "git://github.com/tpope/vim-repeat.git",
  "git://github.com/tpope/vim-surround.git",
  "git://github.com/tsaleh/vim-tcomment.git",
  "git://github.com/skammer/vim-css-color.git",
  "git://github.com/ervandew/supertab.git",
  "git://github.com/vim-scripts/Gist.vim.git",
  "git://github.com/kien/ctrlp.vim.git",
  "git://github.com/vim-scripts/xterm16.vim.git",
]

vim_org_scripts = [
  ["IndexedSearch", "7062",   "plugin"],

  # http://vim.sourceforge.net/scripts/script.php?script_id=1491
  ["javascript",    "10728",  "syntax"],
  # http://vim.sourceforge.net/scripts/script.php?script_id=1542
  ["pythoncomplete","10872",  "autoload"],
  # http://vim.sourceforge.net/scripts/script.php?script_id=1355
  ["php-doc",       "4666",   "plugin"],
  # http://vim.sourceforge.net/scripts/script.php?script_id=273
  ["TagList",       "7701",   "zip"],
]

require 'fileutils'
require 'open-uri'

vim_dir = File.join(File.expand_path('~'), ".vim")

bundles_dir = File.join(vim_dir, "bundle")

FileUtils.cd(bundles_dir)

puts "Trashing everything in ${bundles_dir} (lookout!)"
Dir["*"].each {|d| FileUtils.rm_rf d }

git_bundles.each do |url|
  dir = url.split('/').last.sub(/\.git$/, '')
  puts "  Unpacking #{url} into #{dir}"
  `git clone #{url} #{dir}`
  FileUtils.rm_rf(File.join(dir, ".git"))
end

vim_org_scripts.each do |name, script_id, script_type|
  puts "  Downloading #{name}"
  if script_type == 'zip'
    local_file = File.join(name, "#{name}.#{script_type}")
  else
    local_file = File.join(name, script_type, "#{name}.vim")
  end
  FileUtils.mkdir_p(File.dirname(local_file))
  File.open(local_file, "w") do |file|
    file << open("http://www.vim.org/scripts/download_script.php?src_id=#{script_id}").read
  end
  if script_type == 'zip'
    `unzip #{local_file} -d #{name}`
    FileUtils.rm_rf(local_file)
  end
end
